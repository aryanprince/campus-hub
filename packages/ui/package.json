    "@radix-ui/react-dialog": "catalog:",
    "@radix-ui/react-dropdown-menu": "catalog:",
    "@radix-ui/react-label": "catalog:",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-separator": "catalog:",
    "@radix-ui/react-slot": "catalog:",
    "@radix-ui/react-tooltip": "catalog:",
    "class-variance-authority": "catalog:",
    "clsx": "^2.1.1",
    "lucide-react": "^0.416.0",
    "next-themes": "catalog:",
    "react-hook-form": "^7.52.1",
    "sonner": "catalog:",
    "tailwind-merge": "catalog:",
    "tailwindcss-animate": "catalog:"
  },
  "devDependencies": {
    "@campus-hub/config-prettier": "workspace:*",
    "@campus-hub/config-tailwind": "workspace:*",
    "@campus-hub/config-typescript": "workspace:*",
    "@campus-hub/eslint-config": "workspace:*",
    "@types/react": "catalog:react18",
    "eslint": "^9.0.0",
    "prettier": "catalog:",
    "react": "catalog:react18",
    "tailwindcss": "catalog:",
    "typescript": "catalog:",
    "zod": "catalog:"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@campus-hub/eslint-config/base",
      "@campus-hub/eslint-config/react"
    ]
  },
  "prettier": "@campus-hub/config-prettier",
  "exports": {
    "./globals.css": "./src/globals.css",
    "./tailwind.config": "./tailwind.config.ts",
    "./lib/*": "./src/lib/*.ts",
    "./components/*": [
      "./src/components/*.tsx",
      "./src/components/*.ts"
    ]
  }
